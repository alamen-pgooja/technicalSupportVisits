<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:padding="15dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal">

    <ImageView
        android:id="@+id/filerImage"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/no_net_conniction" />

    <TextView
        android:textAlignment="center"
        android:textColor="#000"
        android:layout_below="@+id/filerImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:text="Oops..look like something gos wron :("
        android:id="@+id/filerText"/>
    <Button
        android:layout_marginTop="9dp"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/filerText"
        android:layout_centerHorizontal="true"
        android:textColor="#000"
        android:text="OK"

        android:id="@+id/filerButton"
        android:background="@drawable/shape"/>
</RelativeLayout>